{
    "breadcrumbs.enabled": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontFamily": "'Fira Code iScript', 'Fira Code', 'JetBrains Mono', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 18,
    "editor.fontWeight": 500,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.guides.bracketPairs": "active",
    "editor.lineHeight": 1.5,
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "all",
    "editor.scrollbar.verticalScrollbarSize": 5,
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "files.autoSave": "afterDelay",
    "terminal.integrated.cwd": "C:\\Users\\Nekozeki\\Documents\\Nekoineer",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.hideOnStartup": "always",
    "update.primaryLanguageReporting": false,
    "window.density.editorTabHeight": "compact",
    "window.menuBarVisibility": "classic",
    "window.titleBarStyle": "native",
    "window.zoomLevel": 1.5,
    "workbench.cloudChanges.autoResume": "off",
    "workbench.cloudChanges.continueOn": "off",
    "workbench.colorTheme": "Palenight Operator",
    "workbench.iconTheme": "Monokai Classic Icons",
    "workbench.keybindings.rstudioKeybindings": true,
    "workbench.productIconTheme": "fluent-icons",
    "workbench.startupEditor": "none",
    "workbench.statusBar.visible": true,
    "zenMode.centerLayout": false,
    "editor.tokenColorCustomizations": {
        "[Palenight Theme]": {
            "textMateRules": [
                {
                    "name": "Comment",
                    "scope": [
                        "comment"
                    ],
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#676E95"
                    }
                },
                {
                    "name": "Keyword and Storage",
                    "scope": [
                        "keyword",
                        "keyword.control",
                        "storage",
                        "storage.type"
                    ],
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "name": "Function names and method calls",
                    "scope": [
                        "entity.name.function",
                        "meta.function-call"
                    ],
                    "settings": {
                        "fontStyle": "italic"
                    }
                }
            ]
        }
    },
    "files.associations": {
        "renv.lock": "json"
    },
    "editor.autoClosingDelete": "never",
    "editor.autoIndentOnPaste": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "workbench.externalBrowser": "edge"
}
